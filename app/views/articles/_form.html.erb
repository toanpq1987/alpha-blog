<% if @article.errors.any? %>
	<h2>The following errors prevented our job</h2>
	<% @article.errors.full_messages.each do |m| %>
		<li><%= m  %></li>
	<% end 	%>
<% end %>
<%= form_with(model: @article, local: true) do |f| %>
	<p>
		<%= f.label :title %><br>
		<%= f.text_field :title %>
	</p>

	<p>
		<%= f.label :description %><br/>
		<%= f.text_field  :description %>
	</p>
	<p>  <%=  f.submit  %> </p>
<% end %>