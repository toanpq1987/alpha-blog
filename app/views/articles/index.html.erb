<h1>This is the index page </h1>

<table>
	<thead>
		<tr>
			<th> <strong>Title</strong></th>
			<th><strong>Description</strong></th>
			<th colspan = "3"><strong>Action</strong></th>
		</tr>
		
	</thead>
	<tbody>
		<% @articles.each do |a| %>
			<tr> 
				<td><%=  a.title %></td>
				<td><%=  a.description %></td>
				<td> <%= link_to 'Show', article_path(a) %></td>	
				<td><%= link_to 'Edit', edit_article_path(a) %></td>
				<td><%= link_to 'Delete', article_path(a), method: :delete , data: {confirm: "Are you sure"} %></td>
			</tr>
		<% end   %>
	</tbody>
</table>

<p>
	<%= link_to "Create new article", new_article_path %>
</p>